{% include "header.njk" %}
{% import "./data/index.data.njk" as data %}
{% set sectors = data.sectors %}
{% set programs = data.programs %}
{% set goals = data.goals %}
{% set values = data.values %}
<!-- Define Data Arrays -->


<!-- Replace the existing header section -->
<header class="min-h-screen flex items-center justify-center pt-24 px-4 sm:px-6 relative overflow-hidden">
  <!-- Background with overlay -->
  <div class="absolute inset-0 z-0">
      <img 
          src="./assets/images/background-hero.png" 
          alt="Background" 
          class="w-full h-full object-cover"
      >
      <div class="absolute inset-0 bg-gradient-to-r from-gray-900/85 via-blue-900/45 to-blue-900/90"></div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl w-full flex flex-col md:flex-row items-center relative z-10 gap-8 md:gap-16">
      <div class="md:w-1/2 text-white text-center md:text-left">
          <h1 class="text-4xl md:text-6xl font-bold leading-tight mb-6">
              <span class="block">Empowering</span>
              <span class="block mt-2 bg-gradient-to-r from-blue-400 to-cyan-300 bg-clip-text text-transparent">The Next Generation</span>
          </h1>
          <p class="mt-6 text-lg md:text-xl text-gray-300 max-w-xl mx-auto md:mx-0">
              Transforming business, education, and society in a rapidly evolving world through innovation and sustainable development
          </p>
          <div class="mt-8 flex flex-col md:flex-row gap-4 justify-center md:justify-start">
              <a href="#sectors" class="px-8 py-4 bg-blue-500 hover:bg-blue-600 rounded-full text-white transition transform hover:scale-105 text-center">Explore Sectors</a>
              <a href="#vision" class="px-8 py-4 border-2 border-white hover:bg-white/10 rounded-full transition text-center">Learn More</a>
          </div>
      </div>

      <!-- Right Side Content -->
      <div class="md:w-1/2 relative">
          <!-- Stats Grid -->
          <div class="grid grid-cols-2 gap-4">
              <!-- Stat Card 1 -->
              <div class="bg-white/10 backdrop-blur-sm p-6 rounded-2xl border border-white/20">
                  <div class="text-4xl font-bold text-white mb-2">2+</div>
                  <div class="text-blue-200">Young Leaders Trained</div>
              </div>
              
              <!-- Stat Card 2 -->
              <div class="bg-white/10 backdrop-blur-sm p-6 rounded-2xl border border-white/20">
                  <div class="text-4xl font-bold text-white mb-2">4+</div>
                  <div class="text-blue-200">Global Partners</div>
              </div>
              
              <!-- Stat Card 3 -->
              <div class="bg-white/10 backdrop-blur-sm p-6 rounded-2xl border border-white/20">
                  <div class="text-4xl font-bold text-white mb-2">1</div>
                  <div class="text-blue-200">Countries Reached</div>
              </div>
              
              <!-- Stat Card 4 -->
              <div class="bg-white/10 backdrop-blur-sm p-6 rounded-2xl border border-white/20">
                  <div class="text-4xl font-bold text-white mb-2">96%</div>
                  <div class="text-blue-200">Success Rate</div>
              </div>
          </div>

          <!-- Floating Elements for Visual Interest -->
          <div class="absolute -top-4 -right-4 w-20 h-20 bg-blue-500/20 rounded-full blur-2xl"></div>
          <div class="absolute -bottom-8 -left-8 w-32 h-32 bg-cyan-500/20 rounded-full blur-2xl"></div>
      </div>
  </div>
</header>

<!-- Vision section -->
<section id="vision" class="py-16 sm:py-24 px-4 sm:px-6 bg-white">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-6 bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                Our Vision & Mission
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                Building a brighter future through innovation and empowerment
            </p>
        </div>

        <!-- Vision & Mission Cards Container -->
        <div class="grid md:grid-cols-2 gap-4 sm:gap-6 items-stretch">
            <!-- Vision Card -->
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 group">
                <div class="relative h-48 overflow-hidden">
                    <img src="assets/images/vision.jpg" 
                         alt="Vision of the company" 
                         class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500">
                    <div class="absolute inset-0 bg-gradient-to-t from-blue-900/90 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <span class="bg-white/20 backdrop-blur-sm text-white px-4 py-1 rounded-full text-sm">
                            Vision
                        </span>
                    </div>
                </div>
                <div class="p-8">
                    <h3 class="text-2xl font-bold mb-4 text-gray-900">Shaping Tomorrow's Leaders</h3>
                    <p class="text-gray-600 leading-relaxed">
                        We envision creating a future where young people are empowered with the skills, knowledge, and
                        opportunities needed to excel in various fields. Our goal is to act as a catalyst for
                        innovation, creativity, and sustainable development.
                    </p>
                    <div class="mt-6 flex items-center text-blue-500">
                        <i class="fa-solid fa-lightbulb mr-2"></i>
                        <span class="font-medium">Inspiring Change</span>
                    </div>
                </div>
            </div>

            <!-- Mission Card -->
            <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 group">
                <div class="relative h-48 overflow-hidden">
                    <img src="assets/images/mission.jpg" 
                         alt="Mission of the company" 
                         class="w-full h-full object-cover transform group-hover:scale-110 transition duration-500">
                    <div class="absolute inset-0 bg-gradient-to-t from-blue-900/90 to-transparent"></div>
                    <div class="absolute bottom-4 left-4">
                        <span class="bg-white/20 backdrop-blur-sm text-white px-4 py-1 rounded-full text-sm">
                            Mission
                        </span>
                    </div>
                </div>
                <div class="p-8">
                    <h3 class="text-2xl font-bold mb-4 text-gray-900">Empowering Through Action</h3>
                    <p class="text-gray-600 leading-relaxed">
                        Our mission is to provide a platform that fosters innovation,
                        creativity, and sustainable development. Through strategic initiatives and partnerships,
                        we empower young people to reach their full potential and make meaningful contributions to society.
                    </p>
                    <div class="mt-6 flex items-center text-blue-500">
                        <i class="fa-solid fa-rocket mr-2"></i>
                        <span class="font-medium">Driving Progress</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Key Values -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-6 mt-8 sm:mt-12">
            {% for value in values %}
            <div class="text-center p-6 bg-blue-50 rounded-xl">
                <i class="{{ value.icon }} text-2xl text-blue-500 mb-3"></i>
                <h4 class="font-semibold text-gray-900">{{ value.title }}</h4>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Sectors section -->
<section id="sectors" class="py-16 sm:py-24 px-4 sm:px-6 bg-gray-50">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="text-blue-600 font-semibold tracking-wider uppercase text-sm">Our Focus Areas</span>
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mt-4 mb-6 bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                Diverse Opportunities
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                Creating opportunities across multiple sectors, empowering young people with unique pathways for personal and professional growth
            </p>
        </div>

        <!-- Sectors Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            {% for sector in sectors %}
            <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500">
                <div class="relative h-56 overflow-hidden">
                    <img src="{{ sector.image }}" 
                         alt="{{ sector.alt }}" 
                         class="w-full h-full object-cover transform group-hover:scale-105 transition duration-700">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900/90 via-gray-900/50 to-transparent"></div>
                    <div class="absolute bottom-0 left-0 right-0 p-6">
                        <span class="text-white text-sm tracking-wider uppercase bg-blue-500/20 backdrop-blur-sm px-3 py-1 rounded-full">
                            {{ sector.badge }}
                        </span>
                        <h3 class="text-2xl font-bold text-white mt-2">{{ sector.title }}</h3>
                    </div>
                </div>
                <div class="p-4 sm:p-6">
                    <p class="text-gray-600 leading-relaxed text-sm sm:text-base">
                        {{ sector.description }}
                    </p>
                    <div class="mt-6 flex items-center text-blue-600">
                        <span class="text-sm font-semibold">Learn More</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Programs Section -->
<section id="programs" class="py-16 sm:py-24 px-4 sm:px-6 bg-gray-50">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="text-blue-600 font-semibold tracking-wider uppercase text-sm">Our Initiatives</span>
            <h2 class="text-3xl sm:text-4xl mb-2 md:text-5xl font-bold mt-4 mb-6 bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                Key Programs
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                Empowering through focused initiatives and sustainable programs that drive meaningful change
            </p>
        </div>

        <!-- Programs Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            {% for program in programs %}
            <div class="group relative bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500">
                <!-- Decorative gradient background -->
                <div class="absolute inset-0 bg-gradient-to-br from-blue-50 to-cyan-50 opacity-50"></div>
                
                <!-- Content -->
                <div class="relative p-8">
                    <!-- Icon -->
                    <div class="mb-6">
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center text-white transform group-hover:scale-110 transition-transform duration-300">
                            <i class="{{ program.icon }} text-2xl"></i>
                        </div>
                    </div>
                    
                    <!-- Badge -->
                    <span class="inline-block text-sm text-blue-600 font-semibold tracking-wider uppercase bg-blue-100 px-3 py-1 rounded-full mb-4">
                        {{ program.badge }}
                    </span>
                    
                    <!-- Title -->
                    <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors">
                        {{ program.title }}
                    </h3>
                    
                    <!-- Description -->
                    <p class="text-gray-600 leading-relaxed mb-6">
                        {{ program.description }}
                    </p>
                    
                    <!-- Action Link -->
                    <div class="flex items-center text-blue-600 font-semibold">
                        <span class="text-sm">Explore Program</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 group-hover:translate-x-2 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </div>
                    
                    <!-- Decorative element -->
                    <div class="absolute top-0 right-0 w-24 h-24 bg-gradient-to-br from-blue-100 to-transparent opacity-50 rounded-bl-full"></div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Future Goals section -->
<section id="goals" class="py-16 sm:py-24 px-4 sm:px-6 bg-gradient-to-br from-gray-50 to-blue-50">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="text-blue-600 font-semibold">Looking Ahead</span>
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mt-4 mb-6 bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                Our Future Goals
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
                Charting our path towards innovation, sustainability, and global impact
            </p>
        </div>

        <!-- Goals Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6">
            {% for goal in goals %}
            <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100/50">
                <div class="flex items-start gap-6">
                    <div class="w-12 h-12 rounded-xl bg-blue-500/10 flex items-center justify-center text-blue-600 group-hover:scale-110 transition-transform duration-300">
                        <i class="{{ goal.icon }} text-2xl"></i>
                    </div>
                    <div>
                        <div class="text-sm font-semibold text-blue-500 mb-2">Goal {{ goal.number }}</div>
                        <h4 class="text-xl font-bold mb-3 text-gray-900">{{ goal.title }}</h4>
                        <p class="text-gray-600 leading-relaxed">
                            {{ goal.description }}
                        </p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Careers Section -->
<section id="careers" class="py-16 sm:py-24 px-4 sm:px-6 bg-white">
    <div class="max-w-7xl mx-auto">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <span class="text-blue-600 font-semibold tracking-wider uppercase text-sm">Join Our Team</span>
            <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold mt-4 mb-6 bg-gradient-to-r from-blue-600 to-blue-400 bg-clip-text text-transparent">
                Grow With Us
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
                Be part of our mission to shape the future. We're always looking for talented individuals to join our team
            </p>
        </div>

        <!-- Career Benefits Grid -->
        <div class="grid md:grid-cols-3 gap-8 mb-12">
            <!-- Culture -->
            <div class="bg-gray-50 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-users text-blue-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Dynamic Culture</h3>
                <p class="text-gray-600">Join a diverse team of innovators and thought leaders</p>
            </div>

            <!-- Growth -->
            <div class="bg-gray-50 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-chart-line text-blue-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Career Growth</h3>
                <p class="text-gray-600">Continuous learning and development opportunities</p>
            </div>

            <!-- Impact -->
            <div class="bg-gray-50 rounded-2xl p-6 text-center hover:shadow-lg transition-all duration-300">
                <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
                    <i class="fa-solid fa-lightbulb text-blue-600 text-xl"></i>
                </div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Make an Impact</h3>
                <p class="text-gray-600">Work on projects that make a real difference</p>
            </div>
        </div>

        <!-- CTA Box -->
        <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl p-8 sm:p-12 text-center">
            <h3 class="text-2xl sm:text-3xl font-bold text-white mb-4">
                Ready to Start Your Journey?
            </h3>
            <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
                Explore our current opportunities and become part of our mission to empower the next generation
            </p>
            <a href="/careers" class="inline-flex items-center px-8 py-3 bg-white text-blue-600 font-semibold rounded-full hover:bg-blue-50 transition-colors duration-300">
                View Open Positions
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </a>
        </div>
    </div>
</section>

{% include "footer.njk" %}